<div class="center jumbotron">
<p id="notice"><%= notice %></p>
<h1>Product Names</h1>
</div>
<p>
Download:
  <%= link_to "CSV", products_path(format: "csv") %>
</p>

<table id="products">
  <col width="80">
  <thead>
    <tr>
      <th>Id</th>
      <th>Product Name</th>
      <th>Reporting Name</th>
      <%# <th>Created</th> %>
      <th>Last Updated</th>
      <th colspan="9"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.product_name %></td>
        <td><%= product.reporting_name %></td>
        <%# <td><%= product.created_at %1></td> %>
        <%# <td><%= product.updated_at %1></td> %>
        <td><%= product.updated_at.in_time_zone("America/Los_Angeles") %></td>
      </tr> <% end %>
  <tbody>
</table>

<h2>Import Products</h2>

<%= form_tag import_products_path, multipart: true do %>
  <%= file_field_tag :file, class: "btn btn-secondary btn-lg " %>
  <%= submit_tag "Import", class: "btn btn-primary col-sm-1 " %>
<% end %>
